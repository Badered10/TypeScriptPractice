{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "ignoreDeprecations": "6.0"
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}
